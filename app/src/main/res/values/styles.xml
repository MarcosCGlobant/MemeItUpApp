<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ImageAppIcon">
        <item name="android:layout_width">@dimen/activity_main_app_icon_width</item>
        <item name="android:layout_height">@dimen/activity_main_app_icon_height</item>
        <item name="android:contentDescription">@string/activity_main_app_title_icon</item>
        <item name="android:src">@drawable/meme_it_up_app_icon</item>
    </style>

    <style name="TextViewAppName">
        <item name="android:text">@string/activity_main_app_name_text</item>
        <item name="android:textColor">@color/activity_main_app_name_text_color</item>
        <item name="android:textSize">@dimen/activity_main_app_name_text_size</item>
    </style>

    <style name="ImageViewMemesElement">
        <item name="android:layout_width">@dimen/layout_meme_element_image_width</item>
        <item name="android:layout_height">@dimen/layout_meme_element_image_height</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="TextViewMemesElement">
        <item name="android:textSize">@dimen/layout_meme_list_element_text_view_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="BaseCardView">
        <item name="cardBackgroundColor">@color/card_view_background_color</item>
        <item name="cardElevation">@dimen/card_view_card_elevation</item>
        <item name="cardMaxElevation">@dimen/card_view_max_card_elevation</item>
        <item name="android:layout_margin">@dimen/layout_fragment_card_view_margin</item>
    </style>

    <style name="CardViewGrid" parent="BaseCardView">
        <item name="cardCornerRadius">@dimen/card_view_grid_corner_radius</item>
    </style>

    <style name="CardViewList" parent="BaseCardView">
        <item name="cardCornerRadius">@dimen/card_view_list_corner_radius</item>
        <item name="contentPadding">@dimen/card_view_list_content_padding</item>
    </style>

    <style name="DialogBaseConfig">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/layout_fragment_meme_detail_margin_bottom</item>
    </style>

    <style name="ImageViewDialog">
        <item name="android:layout_width">@dimen/layout_fragment_meme_detail_image_width</item>
        <item name="android:layout_height">@dimen/layout_fragment_meme_detail_image_height</item>
        <item name="android:layout_marginBottom">@dimen/layout_fragment_meme_detail_margin_bottom</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ImageViewDialogError" parent="ImageViewDialog">
        <item name="android:layout_width">@dimen/layout_fragment_meme_detail_error_image_width</item>
        <item name="android:layout_height">@dimen/layout_fragment_meme_detail_error_image_height</item>
    </style>

    <style name="DialogTitlesText" parent="DialogBaseConfig">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/layout_fragment_meme_detail_titles_text_size</item>
    </style>

    <style name="DialogOrigin" parent="DialogTitlesText">
        <item name="android:text">@string/meme_origin</item>
    </style>

    <style name="DialogRank" parent="DialogTitlesText">
        <item name="android:text">@string/meme_rank</item>
    </style>

    <style name="DialogTags" parent="DialogTitlesText">
        <item name="android:text">@string/meme_tags</item>
    </style>

    <style name="DialogMemeName" parent="DialogTitlesText">
        <item name="android:textSize">@dimen/layout_fragment_meme_detail_meme_name_text_size</item>
    </style>

    <style name="DialogCloseButton">
        <item name="android:src">@drawable/ic_close</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>